{{#if addNewResponse}}
<h1>New Response</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="response">Response</label>
      {{input value=response id="response"}}
    </div>
    <div class="form-group">
      <label for="question">qustion</label>
      {{input value=question.question id="question"}}
    </div>
    <button {{action 'saveResponse'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'responseFormShow'}}>New Response</button>
{{/if}}